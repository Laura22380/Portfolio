@model CarDealership.UI.Models.SpecialsAddViewModel
@{
    ViewBag.Title = "Specials";
}

<div class="col-md-12">
    <h2>Specials</h2>
    <div class="container" style="border:solid 1.5px">
        @using (Html.BeginForm("Specials", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", id = "frmAddSpecial" }))
        {
            <div class="form-group">
                    <div class="row col-6">
                        <label>Title</label>
                        @Html.TextBoxFor(m => m.Special.SpecialTitle)
                    </div>

                    <div class="row col-6">
                        <label>Description</label>
                        @Html.TextAreaFor(m => m.Special.SpecialDescription)
                    </div>
                <button type="submit" class="btn btn-outline-success" style="margin: 5px">Save</button>
            </div>
        }


    </div>
</div>

<div class="container">
    <h2>Specials</h2>
    <div class="row">
        @foreach (var special in Model.Specials)
        {
            <div class="col-md-12">
                <div class="row" style="border: solid 1px; padding: 10px; margin:5px 0px 5px 0px">
                    <div class="col-md-3">
                        <p class="newVehicle"><img src="@Url.Content("~/Images/specials.png")" /></p>
                    </div>
                    <div class="col-md-9">
                        <div class="row">
                            <div class="offset-10">
                                @using (Html.BeginForm("DeleteSpecial", "Admin", FormMethod.Post))
                                {
                                    @Html.Hidden("SpecialId", special.SpecialId)
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this special?')">Delete</button>
                                }
                            </div>
                            <p><strong>@special.SpecialTitle</strong></p>

                        </div>
                        <p>@special.SpecialDescription</p>
                    </div>
                </div>

            </div>
        }
    </div>
</div>