@model CarDealership.UI.Models.AddEditViewModel

@{
    ViewBag.Title = "Edit";
}


<div class="row">
    <div class="col-xs-12">
        <h2>Edit Vehicle</h2>
        @using (Html.BeginForm("Edit", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", VIN = Model.Vehicle.VIN, id = "frmEditVehicle", role = "form" }))
        {
            @Html.ValidationSummary()
            @Html.HiddenFor(m => m.Vehicle.VIN)
            <div class="row">
                <div class="form-group col-6">
                    <label>Make</label>
                    @Html.DropDownListFor(m => m.Vehicle.MakeId, Model.Makes, new { @class = "form-control" })
                </div>
                <div class="form-group col-6">
                    <label>Model</label>
                    @Html.DropDownListFor(m => m.Vehicle.ModelId, Model.Models, new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="form-group col-6">
                    <label>Type</label>
                    <select class="form-control" id="carType">
                        <option>New</option>
                        <option>Used</option>
                    </select>
                </div>
                <div class="form-group col-6">
                    <label>Body Style</label>
                    @Html.DropDownListFor(m => m.Vehicle.BodyStyleId, Model.BodyStyles, new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="form-group col-6">
                    <label>Year</label>
                    @Html.TextBoxFor(m => m.Vehicle.Year, new { @class = "form-control" })
                </div>
                <div class="form-group col-6">
                    <label>Transmission</label>
                    @Html.DropDownListFor(m => m.Vehicle.TransmissionId, Model.Transmissions, new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="form-group col-6">
                    <label>Color</label>
                    @Html.DropDownListFor(m => m.Vehicle.ColorId, Model.Colors, new { @class = "form-control" })
                </div>
                <div class="form-group col-6">
                    <label>Interior</label>
                    @Html.DropDownListFor(m => m.Vehicle.InteriorId, Model.Interiors, new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="form-group col-6">
                    <label>Mileage</label>
                    @Html.TextBoxFor(m => m.Vehicle.Mileage, new { @class = "form-control" })
                </div>
                <div class="form-group col-6">
                    <label>VIN</label>
                    @Html.TextBoxFor(m => m.Vehicle.VIN, new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="form-group col-6">
                    <label>MSRP</label>
                    @Html.TextBoxFor(m => m.Vehicle.MSRP, new { @class = "form-control" })
                </div>
                <div class="form-group col-6">
                    <label>Sale Price</label>
                    @Html.TextBoxFor(m => m.Vehicle.SalePrice, new { @class = "form-control" })
                </div>
            </div>
            <div class="row col-md-10">
                <label>Description</label>
                @Html.TextAreaFor(m => m.Vehicle.VehicleDescription, new { @class = "form-control" })
            </div>

            <div class="col-sm-12 col-md-6">
                <img src="@Url.Content("~/Images/" + Model.Vehicle.ImageFileName)" style="max-width: 180px" />
                <div class="form-group">
                    <label>Replace Image</label>
                    <input id="ImageUpload" name="ImageUpload" type="file" class="form-control" />
                </div>
            </div>
            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(m => m.Vehicle.IsFeatured) Feature this vehicle
                </label>
            </div>
            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(m => m.Vehicle.IsPurchased) Vehicle Purchased.
                </label>
            </div>

            <div class="row col-md-1">

                <button type="submit" class="btn btn-primary">Save</button>
            </div>

        }
    <div class="row-cols-md-3 ">
        @using (Html.BeginForm("Delete", "Admin", FormMethod.Post))
        {
            @Html.Hidden("VIN", Model.Vehicle.VIN)
            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this vehicle?')">Delete</button>
        }
    </div>

    </div>
</div>

@section scripts
{
    <script>
        $(document).ready(function () {
            console.log('ready');
            $('#frmEditVehicle').validate({
                rules: {
                    'VIN': {
                        required: true
                    },
                }
            });
        });
    </script>
}


