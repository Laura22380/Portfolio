@model IEnumerable<CarDealership.Models.Tables.Users>
@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>

<div>
    @Html.ActionLink("Add a new user", "AddUser", "Admin")
    <div class="col-xs-10">
        @if (Model.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            Last Name
                        </th>
                        <th>
                            First Name
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Role
                        </th>
                        <th>
                            
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.LastName</td>
                            <td>@user.FirstName</td>
                            <td>@user.Email</td>
                            <td>@user.Role</td>
                            <td>
                                @Html.ActionLink("edit", "EditUser", "Admin", new { id = user.UserId }, null)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>You do not have any users.</p>
        }

    </div>
</div>