@model CarDealership.UI.Models.AddEditUserModel

@{
    ViewBag.Title = "EditUser";
}

<div class="container">
    <h2>Edit User</h2>

    @using (Html.BeginForm("EditUser", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", @*Id=Model.User.UserId,*@ id = "frmEditUser" }))
    {
        @Html.ValidationSummary()
        @Html.HiddenFor(m => m.User.UserId)
        <div class="row">
            <div class="form-group col-6">
                <label>First Name</label>
                @Html.TextBoxFor(m => m.User.FirstName, new { @class = "form-control" })
            </div>
            <div class="form-group col-6">
                <label>Last Name</label>
                @Html.TextBoxFor(m => m.User.LastName, new { @class = "form-control" })
            </div>
        </div>
        <div class="row">
            <div class="form-group col-6">
                <label>Email</label>
                @Html.TextBoxFor(m => m.User.Email, new { @class = "form-control" })
            </div>
            <div class="form-group col-6">
                <label for="Role">Role</label>
                <select class="form-control" id="Role" name="Role">
                    <option>@Model.User.Role</option>
                    <option>Sales</option>
                    <option>Admin</option>
                    <option>Disabled</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-6">
                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                <div>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group col-6">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                <div>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    }
</div>

