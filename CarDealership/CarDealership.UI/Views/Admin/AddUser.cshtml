@model CarDealership.UI.Models.AddEditUserModel
@{
    ViewBag.Title = "AddUser";
}

<div class="container">
    <h2>Add User</h2>

    @using (Html.BeginForm("AddUser", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", id = "frmAddUser" }))
    {
        @Html.ValidationSummary()
        <div class="row">
            <div class="form-group col-6">
                <label>First Name</label>
                @Html.TextBoxFor(m => m.User.FirstName, new { @class = "form-control" })
            </div>
            <div class="form-group col-6">
                <label>Last Name</label>
                @Html.TextBoxFor(m => m.User.LastName, new { @class = "form-control" })
            </div>
        </div>
        <div class="row">
            <div class="form-group col-6">
                <label>Email</label>
                @Html.TextBoxFor(m => m.User.Email, new { @class = "form-control" })
            </div>
            <div class="form-group col-6">
                <label for="Role">Role</label>
                <select class="form-control" id="Role" name="Role">
                    <option>Admin</option>
                    <option>Sales</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-6">
                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                <div >
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group col-6">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                <div >
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    }
</div>