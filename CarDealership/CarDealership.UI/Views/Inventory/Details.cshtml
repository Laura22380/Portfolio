@model CarDealership.Models.Queries.VehicleItem

@{
    ViewBag.Title = "Details";
}


<div class="row">
    <div class="col-md-12">
        <h2>Vehicle Details</h2>
    </div>
</div>
<div class="container" style="border: solid">
    <div class="row">
        <div class="col-xs-12 col-md-3" style="margin:5px 0px 0px 0px">
            <p><strong>@Model.Year, @Model.Make, @Model.Model</strong></p>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-md-3">
            <p class="newVehicle"><img src="@Url.Content("~/Images/" + Model.ImageFileName)" style="max-width:200px; max-height: 180px"/></p>
        </div>
        <div class="col-md-3">
            <p><strong>Body Style: </strong>@Model.BodyStyleName</p>
            <p><strong>Trans: </strong>@Model.TransmissionName</p>
            <p><strong>Color: </strong>@Model.ColorName</p>
        </div>
        <div class="col-md-3">
            <p><strong>Interior: </strong>@Model.InteriorName</p>
            <p><strong>Mileage: </strong>New</p>
            <p><strong>VIN: </strong>@Model.VIN</p>
        </div>
        <div class="col-md-3">
            <p><strong>Sale Price: </strong>@Model.SalePrice.ToString("c")</p>
            <p><strong>MSRP: </strong>@Model.MSRP.ToString("c")</p>
        </div>
    </div>
    <div class="offset-md-3">
        <p><strong>Description: </strong>@Model.VehicleDescription</p>
    </div>
    <div class="row">
        @if (Request.IsAuthenticated)
        {
            if (Model.IsPurchased)
            {
                <p>
                    <button class="btn btn-outline-dark offset-md-10"><text>@Html.ActionLink("Unavailable-Sold", "New", "Inventory", new { VIN = Model.VIN }, null)</text></button>
                </p>

            }
            <p>
                <button class="btn btn-outline-dark offset-md-10"><text>@Html.ActionLink("Purchase", "Purchase", "Sales", new { VIN = Model.VIN }, null)</text></button>
            </p>

        }
        else
        {
            if (Model.IsPurchased)
            {
                <p>
                    <button class="btn btn-outline-dark offset-md-10"><text>@Html.ActionLink("Unavailable-Sold", "New", "Inventory", new { VIN = Model.VIN }, null)</text></button>
                </p>

            }
            else
            {
                <p>
                    <button class="btn btn-outline-dark offset-md-10"><text>@Html.ActionLink("Contact Us", "Contact", "Home", new { VIN = Model.VIN }, null)</text></button>
                </p>
            }


        }
    </div>
</div>

